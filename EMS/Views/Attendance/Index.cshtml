@model List<EMS.Models.ClassStudent>

@{
    var cls = ViewBag.Class as EMS.Models.Class;
    DateTime date = ViewBag.Date;
}

<div class="container mt-4">

    <!-- Back -->
    <a asp-controller="Teacher"
       asp-action="Dashboard"
       class="text-decoration-none mb-3 d-inline-block">
        ← Back to Classes
    </a>

    <!-- Class Header -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h4>Grade @cls.Grade - @cls.Place</h4>
            <p class="text-muted">
                @cls.ClassStudents.Count student(s)
            </p>
        </div>
    </div>

    <!-- Attendance Form -->
    <form asp-action="Save" method="post">

        <input type="hidden" name="classId" value="@cls.Id" />

        <!-- Date -->
        <div class="d-flex align-items-center mb-3">
            <input type="date"
                   name="date"
                   value="@date.ToString("yyyy-MM-dd")"
                   class="form-control w-auto me-3" />

            <button type="submit" class="btn btn-primary">
                Save Attendance
            </button>
        </div>

        <!-- Student List -->
        <div class="card shadow-sm">
            <div class="card-body">

                @foreach (var cs in Model)
                {
                    <div class="d-flex justify-content-between align-items-center border-bottom py-3">

                        <div>
                            <strong>@cs.Student.Name</strong><br />
                            <small class="text-muted">
                                @cs.Student.StudentCode
                            </small>
                        </div>

                        <div>
                            <input type="checkbox"
                                   class="btn-check"
                                   name="presentStudentIds"
                                   value="@cs.StudentId"
                                   id="s_@cs.StudentId"
                                   checked />

                            <label class="btn btn-outline-success"
                                   for="s_@cs.StudentId">
                                Present
                            </label>
                        </div>
                    </div>
                }

            </div>
        </div>

    </form>
</div>
