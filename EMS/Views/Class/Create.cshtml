@model EMS.Models.Class
@{
    ViewData["Title"] = "Create Class";
}

<link rel="stylesheet" href="~/css/class-create.css" asp-append-version="true" />

<div class="class-create-container">
    <div class="class-create-card">
        <h3 class="page-title">Create New Class</h3>

        <form asp-action="Create" method="post" class="class-form">

            <div class="form-group mb-4">
                <label asp-for="Grade" class="form-label">Grade</label>
                <input asp-for="Grade" class="form-input" placeholder="Enter Grade" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Place" class="form-label">Place</label>
                <input asp-for="Place" class="form-input" placeholder="Enter Place" />
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-primary">Create Class</button>
                <a asp-controller="Teacher" asp-action="Dashboard" class="btn-secondary">Cancel</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
