@model EMS.Models.Class

@{
    ViewData["Title"] = "Class Details";
}

<div class="container mt-4">

    <!-- Back -->
    <a asp-controller="Teacher"
       asp-action="Dashboard"
       class="text-decoration-none">
        ← Back to Classes
    </a>

    <!-- Class Header -->
    <div class="card mt-3 mb-3 shadow-sm">
        <div class="card-body">
            <h4>Grade @Model.Grade - @Model.Place</h4>
            <p class="text-muted">
                @Model.ClassStudents.Count student(s)
            </p>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-3">

        <!-- Attendance (DEFAULT) -->
        <li class="nav-item">
            <a class="nav-link active">
                Attendance
            </a>
        </li>

        <!-- Homework -->
        <li class="nav-item">
            <a class="nav-link"
               asp-controller="Homework"
               asp-action="Index"
               asp-route-classId="@Model.Id">
                Homework
            </a>
        </li>

        <!-- Notes -->
        <li class="nav-item">
            <a class="nav-link"
               asp-controller="Notes"
               asp-action="Index"
               asp-route-classId="@Model.Id">
                Notes
            </a>
        </li>

        <!-- Results (NOW ENABLED) -->
        <li class="nav-item">
            <a class="nav-link"
               asp-controller="Results"
               asp-action="Index"
               asp-route-classId="@Model.Id">
                Results
            </a>
        </li>

        <!-- Students (READY FOR NEXT STEP) -->
        <li class="nav-item">
            <a class="nav-link"
               asp-controller="Students"
               asp-action="Index"
               asp-route-classId="@Model.Id">
                Students
            </a>
        </li>

    </ul>

    <!-- Attendance Content -->
    <form asp-controller="Attendance"
          asp-action="Save"
          method="post"
          class="card shadow-sm">

        <div class="card-body">

            <input type="hidden" name="classId" value="@Model.Id" />

            <div class="d-flex align-items-center mb-3">
                <label class="me-2 fw-bold">Date</label>
                <input type="date"
                       name="date"
                       class="form-control w-auto me-3"
                       required />

                <button class="btn btn-primary">
                    Save Attendance
                </button>
            </div>

            <!-- Student List -->
            @foreach (var cs in Model.ClassStudents)
            {
                <div class="d-flex justify-content-between align-items-center border-bottom py-3">

                    <div>
                        <strong>@cs.Student.Name</strong><br />
                        <small class="text-muted">
                            @cs.Student.StudentCode
                        </small>
                    </div>

                    <input type="checkbox"
                           name="presentStudentIds"
                           value="@cs.StudentId"
                           checked />
                </div>
            }

        </div>
    </form>
</div>
