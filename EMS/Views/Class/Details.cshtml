@model EMS.Models.Class
@{
    string tab = ViewBag.ActiveTab;
}

<div class="container mt-4">

    <a asp-controller="Teacher"
       asp-action="Dashboard">
        ← Back to Classes
    </a>

    <!-- Class Header -->
    <div class="card mt-3 mb-3">
        <div class="card-body">
            <h4>Grade @Model.Grade - @Model.Place</h4>
            <p>@Model.ClassStudents.Count student(s)</p>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active">Attendance</a>
        </li>
        <li class="nav-item"><a class="nav-link">Homework</a></li>
        <li class="nav-item"><a class="nav-link">Notes</a></li>
        <li class="nav-item"><a class="nav-link">Results</a></li>
        <li class="nav-item"><a class="nav-link">Students</a></li>
    </ul>

    <!-- Attendance Content -->
    <form asp-controller="Attendance" asp-action="Save" method="post">
        <input type="hidden" name="classId" value="@Model.Id" />

        <div class="d-flex mt-3 mb-3">
            <input type="date" name="date" class="form-control w-auto me-3" />
            <button class="btn btn-primary">Save Attendance</button>
        </div>

        @foreach (var cs in Model.ClassStudents)
        {
            <div class="d-flex justify-content-between border-bottom py-2">
                <div>
                    <strong>@cs.Student.Name</strong><br />
                    <small>@cs.Student.StudentCode</small>
                </div>

                <input type="checkbox"
                       name="presentStudentIds"
                       value="@cs.StudentId"
                       checked />
            </div>
        }
    </form>
</div>
