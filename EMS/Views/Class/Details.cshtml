@model EMS.Models.Class

@{
    ViewData["Title"] = "Class Details";
}

<link rel="stylesheet" href="~/css/class-details.css" />

<div class="class-details-container">

    <!-- Back -->
    <a asp-controller="Teacher"
       asp-action="Dashboard"
       class="back-link">
        ← Back to Classes
    </a>

    <div class="class-header-card">
        <h4>Grade @Model.Grade - @Model.Place</h4>
        <p>@Model.ClassStudents.Count student(s)</p>
    </div>

   
    <ul class="nav nav-tabs custom-tabs">

        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Details" ? "active" : "")"
           asp-controller="Class"
           asp-action="Details"
           asp-route-id="@Model.Id">
            Attendance
        </a>

        <li class="nav-item">
            <a class="nav-link"
               asp-controller="Homework"
               asp-action="Index"
               asp-route-classId="@Model.Id">
                Homework
            </a>

        </li>

        <!-- Notes -->
        <li class="nav-item">
            <a class="nav-link"
               asp-controller="Notes"
               asp-action="Index"
               asp-route-classId="@Model.Id">
                Notes
            </a>
        </li>

        <!-- Results -->
        <li class="nav-item">
            <a class="nav-link"
               asp-controller="Results"
               asp-action="Index"
               asp-route-classId="@Model.Id">
                Results
            </a>

            <a class="nav-link disabled">Results</a>
        </li>

        <!-- Students -->
        <li class="nav-item">
            <a class="nav-link"
               asp-controller="Students"
               asp-action="Index"
               asp-route-classId="@Model.Id">
                Students
            </a>
         <a class="nav-link disabled">Students</a>

        </li>

    </ul>

    <!-- Attendance -->
    <form asp-controller="Attendance"
          asp-action="Save"
          method="post"
          class="attendance-card">

        <input type="hidden" name="classId" value="@Model.Id" />

            <input type="hidden" name="classId" value="@Model.Id" />

            <div class="d-flex align-items-center mb-3">
                <label class="me-2 fw-bold">Date</label>

                <input type="date"
                       name="date"
                       class="form-control w-auto me-3"
                       required />

                <button class="btn btn-primary">
                    Save Attendance
                </button>
            </div>

            <!-- Student List -->
            @foreach (var cs in Model.ClassStudents)
            {
                <div class="d-flex justify-content-between align-items-center border-bottom py-3">

                    <div>
                        <strong>@cs.Student.Name</strong><br />
                        <small class="text-muted">
                            @cs.Student.StudentCode
                        </small>
                    </div>

                    <input type="checkbox"
                           name="presentStudentIds"
                           value="@cs.StudentId"
                           checked />
                </div>
            }

        <!-- Toolbar -->
        <div class="attendance-toolbar">
            <label class="fw-semibold">Date</label>
            <input type="date"
                   name="date"
                   class="form-control date-input"
                   required />

            <button class="btn btn-primary">
                Save Attendance
            </button>
        </div>

        <!-- Student List -->
        @foreach (var cs in Model.ClassStudents)
        {
            <div class="student-row">

                <div>
                    <div class="student-name">@cs.Student.Name</div>
                    <div class="student-code">@cs.Student.StudentCode</div>
                </div>

                <input type="checkbox"
                       name="presentStudentIds"
                       value="@cs.StudentId"
                       checked />
            </div>
        }

    </form>

</div>
