@model List<EMS.Models.Homework>
@{
    var cls = ViewBag.Class as EMS.Models.Class;
}

<div class="container mt-4">

    <a asp-controller="Teacher" asp-action="Dashboard">
        ← Back to Classes
    </a>

    <div class="card mt-3 mb-3">
        <div class="card-body">
            <h4>Grade @cls.Grade - @cls.Place</h4>
            <p>@Model.Count homework(s)</p>
        </div>
    </div>

    @await Html.PartialAsync("_ClassTabs", cls)

    <a asp-action="Create"
       asp-route-classId="@cls.Id"
       class="btn btn-primary mb-3">
        + Add Homework
    </a>

    @foreach (var hw in Model)
    {
        <div class="border-bottom py-3 d-flex justify-content-between">
            <div>
                <strong>@hw.Title</strong><br />
                <small>Due: @hw.DueDate.ToShortDateString()</small>
            </div>
            <div>
                <a href="@hw.AssssignmentFile" class="btn btn-sm btn-outline-secondary" download>
                    Download
                </a>
                <a asp-action="Delete" asp-route-id="@hw.id"
                   class="btn btn-sm btn-outline-danger ms-2">🗑</a>
            </div>
        </div>
    }
</div>
