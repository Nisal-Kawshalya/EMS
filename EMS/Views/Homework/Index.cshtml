@model List<EMS.Models.Homework>
@{
    var cls = ViewBag.Class as EMS.Models.Class;
}

<div class="container mt-4">

    <!-- Back -->
    <a asp-controller="Class"
       asp-action="Details"
       asp-route-id="@cls.Id">
        ← Back to Class
    </a>

    <!-- Class Header -->
    <div class="card mt-3 mb-3 shadow-sm">
        <div class="card-body">
            <h4>Grade @cls.Grade - @cls.Place</h4>
            <p class="text-muted">@Model.Count homework(s)</p>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <a class="nav-link"
               asp-controller="Class"
               asp-action="Details"
               asp-route-id="@cls.Id">
                Attendance
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link active">
                Homework
            </a>
        </li>
        <li class="nav-item"><a class="nav-link">Notes</a></li>
        <li class="nav-item"><a class="nav-link">Results</a></li>
        <li class="nav-item"><a class="nav-link">Students</a></li>
    </ul>

    <!-- Add Homework -->
    <a asp-action="Create"
       asp-route-classId="@cls.Id"
       class="btn btn-primary mb-3">
        + Add Homework
    </a>

    <!-- Homework List -->
    @foreach (var hw in Model)
    {
        <div class="border-bottom py-3 d-flex justify-content-between align-items-center">
            <div>
                <strong>@hw.Title</strong><br />
                <small class="text-muted">
                    Due: @hw.DueDate.ToShortDateString()
                </small>
            </div>

            <div>
                <a href="@hw.AssssignmentFile"
                   class="btn btn-outline-secondary btn-sm"
                   download>
                    Download
                </a>

                <a asp-action="Delete"
                   asp-route-id="@hw.id"
                   class="btn btn-outline-danger btn-sm ms-2">
                    🗑
                </a>
            </div>
        </div>
    }
</div>
