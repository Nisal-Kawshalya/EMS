@model List<EMS.Models.Note>
@{
    var cls = ViewBag.Class as EMS.Models.Class;
}

<div class="container mt-4">

    <a asp-controller="Teacher" asp-action="Dashboard">← Back to Classes</a>

    <div class="card mt-3 mb-3">
        <div class="card-body">
            <h4>Grade @cls.Grade - @cls.Place</h4>
            <p>@Model.Count note(s)</p>
        </div>
    </div>

    @await Html.PartialAsync("_ClassTabs", cls)

    <a asp-action="Create" asp-route-classId="@cls.Id"
       class="btn btn-primary mb-3">+ Add Notes</a>

    @foreach (var note in Model)
    {
        <div class="border rounded p-3 mb-2 d-flex justify-content-between">
            <strong>@note.Title</strong>
            <div>
                <a href="@note.NotesFile" class="btn btn-sm btn-outline-secondary" download>Download</a>
                <a asp-action="Delete" asp-route-id="@note.Id"
                   class="btn btn-sm btn-outline-danger ms-2">🗑</a>
            </div>
        </div>
    }
</div>
