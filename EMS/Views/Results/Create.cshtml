@model List<EMS.Models.Student>

<div class="container mt-4">
    <h3>Enter Results</h3>

    <form method="post">

        <input type="hidden" name="classId" value="@ViewBag.ClassId" />

        <div class="mb-3">
            <label class="form-label">Exam Title</label>
            <input name="examTitle"
                   class="form-control"
                   required />
        </div>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Student</th>
                    <th>Marks</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>
                            @s.Name
                            <small class="text-muted">(@s.StudentCode)</small>
                        </td>
                        <td>
                            <input type="number"
                                   name="marks[@s.Id]"
                                   class="form-control"
                                   min="0"
                                   max="100"
                                   required />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <button class="btn btn-primary">Save Results</button>

        <a asp-action="Index"
           asp-route-classId="@ViewBag.ClassId"
           class="btn btn-secondary ms-2">
            Cancel
        </a>
    </form>
</div>
