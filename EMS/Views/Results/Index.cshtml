@model List<EMS.Models.Result>
@{
    var cls = ViewBag.Class as EMS.Models.Class;
}

<div class="container mt-4">

    <a asp-controller="Class"
       asp-action="Details"
       asp-route-id="@cls.Id">
        ← Back to Class
    </a>

    <!-- Class Header -->
    <div class="card mt-3 mb-3 shadow-sm">
        <div class="card-body">
            <h4>Grade @cls.Grade - @cls.Place</h4>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <a class="nav-link"
               asp-controller="Class"
               asp-action="Details"
               asp-route-id="@cls.Id">
                Attendance
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link"
               asp-controller="Homework"
               asp-action="Index"
               asp-route-classId="@cls.Id">
                Homework
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link"
               asp-controller="Notes"
               asp-action="Index"
               asp-route-classId="@cls.Id">
                Notes
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link active">
                Results
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link disabled">Students</a>
        </li>
    </ul>

    <!-- Add Results -->
    <a asp-action="Create"
       asp-route-classId="@cls.Id"
       class="btn btn-primary mb-3">
        + Enter Results
    </a>

    <!-- Results Table -->
    <table class="table table-bordered shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Student ID</th>
                <th>Student Name</th>
                <th>Marks</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Student.StudentCode</td>
                    <td>@r.Student.Name</td>
                    <td>@r.Marks</td>
                </tr>
            }
        </tbody>
    </table>

</div>
