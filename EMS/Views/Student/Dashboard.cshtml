@model List<EMS.Models.Class>

@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="container mt-4">

    <h3 class="mb-2">All Classes</h3>
    <p class="text-muted mb-4">
        Classes created by teachers
    </p>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">
            No classes available yet.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var cls in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body d-flex flex-column">

                            <h5>
                                Grade @cls.Grade - @cls.Place
                            </h5>

                            <p class="text-muted">
                                Teacher: @cls.Teacher?.Name ?? "N/A"
                            </p>

                            <div class="mt-auto">
                                <a asp-action="Class"
                                   asp-controller="Student"
                                   asp-route-classId="@cls.Id"
                                   class="btn btn-outline-primary w-100">
                                    View Class
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
