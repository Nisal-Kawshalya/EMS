@model List<EMS.Models.ClassStudent>

@{
    var cls = ViewBag.Class as EMS.Models.Class;
}

<div class="container mt-4">

    <a asp-controller="Class"
       asp-action="Details"
       asp-route-id="@cls.Id"
       class="text-decoration-none">
        ← Back to Class
    </a>

    <!-- Class Header -->
    <div class="card mt-3 mb-3 shadow-sm">
        <div class="card-body">
            <h4>Grade @cls.Grade - @cls.Place</h4>
            <p class="text-muted">
                Students (@Model.Count)
            </p>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <a class="nav-link active">Students</a>
        </li>
    </ul>

    <!-- Add Student -->
    <form asp-action="Add"
          method="post"
          class="d-flex justify-content-end mb-4">

        <input type="hidden" name="classId" value="@cls.Id" />

        <input name="studentCode"
               class="form-control me-2 w-25"
               placeholder="Enter Student Code"
               required />

        <button class="btn btn-primary">
            + Add Student
        </button>
    </form>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <!-- Student List -->
    @foreach (var cs in Model)
    {
        <div class="d-flex justify-content-between align-items-center border-bottom py-3">
            <div class="d-flex align-items-center">
                <div class="me-3 rounded-circle bg-light p-2">👤</div>
                <div>
                    <strong>@cs.Student.Name</strong><br />
                    <small class="text-muted">@cs.Student.StudentCode</small>
                </div>
            </div>

            <a asp-action="Remove"
               asp-route-id="@cs.Id"
               asp-route-classId="@cls.Id"
               class="btn btn-outline-danger btn-sm">
                🗑
            </a>
        </div>
    }
</div>
