@{
    ViewData["Title"] = "Home";
}

<div class="landing">

   
   

    
    <div class="hero">
        <h1>
            Connecting Teachers,<br />
            Students, and Parents<br />
            for Better Education
        </h1>

        <p>
            A modern education management system built to bring all stakeholders together.
